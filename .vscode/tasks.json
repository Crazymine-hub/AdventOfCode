{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_AoC",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AdventOfCode/AdventOfCode.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build_2020",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AoC2020/AoC2020.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "--no-dependencies"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build_2021",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AoC2021/AoC2021.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "--no-dependencies"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run_2020",
            "dependsOn": [
                "build_AoC",
                "build_2020"
            ],
        },
        {
            "label": "run_2021",
            "dependsOn": [
                "build_AoC",
                "build_2021"
            ],
        },


        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/AdventOfCode/AdventOfCode.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/AdventOfCode/AdventOfCode.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}